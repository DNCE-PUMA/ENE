	@Override
	protected View createUI() {
		buildFields();

		q0 = createQuestionSection(lblTitulo);
		q1 = createQuestionSection(R.string.c1c100m1p012, grUbigeo.component());
		q2 = createQuestionSection(R.string.c1c100m1p013, rgC1P113);
		q3 = createQuestionSection(R.string.c1c100m1p014, rgC1P114);

		ScrollView contenedor = createForm();
		LinearLayout form = (LinearLayout) contenedor.getChildAt(0);
		form.addView(q0);
		form.addView(q1);
		form.addView(q2);
