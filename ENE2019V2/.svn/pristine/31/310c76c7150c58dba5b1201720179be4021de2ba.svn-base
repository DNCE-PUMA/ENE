	   //2Si C7P701_8H <> 6 and (C7P701_1B=1 or C7P701_2B=1 or C7P701_3B=1 or C7P701_4B=1)  Pase a C7P703_1
		if (Util.getInt(bean.c7p701_8h) == 6 ||(Util.getInt(bean.c7p701_1b) != 1 && Util.getInt(bean.c7p701_2b) != 1&& Util.getInt(bean.c7p701_3b) != 1 && Util.getInt(bean.c7p701_4b) != 1) ) 
				{
			
			if (!chbC7P702_1.isChecked() && !chbC7P702_2.isChecked()) {
					mensaje = "Debe seleccionar al menos una alternativa 702";
					view = chbC7P702_1;
					return !(error = true);
				}
			}
//		Si C7P701_8A = 2 and sum(C7P701_1A: C7P701_7A)=14 and P25=1,2  Pase a C7P702_1 luego pase C7P705_1
//	if ( Util.getInt(bean.c7p701_8a) != 2 ||( Util.getInt(bean.c7p701_1a)!=2||Util.getInt(bean.c7p701_2a)!=2||Util.getInt(bean.c7p701_3a)!=2|| Util.getInt(bean.c7p701_4a)!=2 ||
//                Util.getInt(bean.c7p701_5a)!=2||Util.getInt(bean.c7p701_6a)!=2|| Util.getInt(bean.c7p701_7a)!=2 )||Util.getInt(caratula.p25)>2) {
		if( Util.getInt(bean.c7p701_1b)==1||Util.getInt(bean.c7p701_2b)==1||Util.getInt(bean.c7p701_3b)==1|| Util.getInt(bean.c7p701_4b)==1){
			if (!chbC7P703_1.isChecked() && !chbC7P703_2.isChecked()
					&& !chbC7P703_3.isChecked() && !chbC7P703_4.isChecked()
					&& !chbC7P703_5.isChecked() && !chbC7P703_6.isChecked()
					&& !chbC7P703_7.isChecked() && !chbC7P703_8.isChecked()
					&& !chbC7P703_9.isChecked()) {
				mensaje = "Debe seleccionar al menos una alternativa 703";
				view = chbC7P703_1;
				return !(error = true);
			}

			if (chbC7P703_9.isChecked()){
				if(Util.esVacio(txtC7P703_9ESP)) {
					mensaje = pregunta_no_vacia.replace("$",
							"La Preg.703_9 (Especifique)");
					view = txtC7P703_9ESP;
					return !(error = true);
				}
				if(txtC7P703_9ESP.getText().toString().trim().length() < 3){
    	    		mensaje = "Ingrese la información correcta";
