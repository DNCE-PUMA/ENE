	public static Mod_IX_Fragment_013_01 newInstance(FragmentForm pagina,
			ModuloixDet013 detalle, CuestionarioService cuestService,
			Mod_IX_Fragment_013.ACCION accion) {
		caller = (Mod_IX_Fragment_013) pagina;
		Filtros.clear();
		Mod_IX_Fragment_013_01 f = new Mod_IX_Fragment_013_01();
		f.setParent(pagina);
		f.cuestionarioService = cuestService;
		f.accion = accion;
		Bundle args = new Bundle();
		args.putSerializable("detalle", detalle);
		f.setArguments(args);
