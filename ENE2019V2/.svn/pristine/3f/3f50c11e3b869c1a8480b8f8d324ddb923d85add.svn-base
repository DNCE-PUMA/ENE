		}

		if (chbC6P603_6.isChecked()) {
			Util.lockView(getActivity(), false, txtC6P603_6ESP);
			txtC6P603_6ESP.requestFocus();
		} else {
			Util.cleanAndLockView(getActivity(), txtC6P603_6ESP);

		}
