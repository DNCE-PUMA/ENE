	public void OnChangeCheckP814(){
	int valor = Integer.parseInt(rgC8P814.getTagSelected("0").toString());
	if (valor == 2 || valor == 3){
		Util.cleanAndLockView(getActivity(),rgC8P815,rgC8P816, rgC8P817_1,chbC8P817_1_N);
		rgC8P817_2.requestFocus();
	}else{
		Util.lockView(getActivity(), false, rgC8P815,rgC8P816,rgC8P817_1,chbC8P817_1_N);
		 OnChangeCheckP817_1();
		
		rgC8P817_1.requestFocus();
	}
	}
